%head
  %meta(charset="utf-8")

  -# Always force latest IE rendering engine (even in intranet) & Chrome Frame
  -# Remove this if you use the .htaccess
  %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")

  %title Sinatra with Html5-boilerplate

  -# Mobile viewport optimized: j.mp/bplateviewport
  %meta(name="viewport" content="width=device-width, initial-scale=1")

  -# CSS: implied media="all"
  %link(rel="stylesheet" href="/stylesheets/application.css")

  -# All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects
  %script(type="text/javascript" src="/javascripts/libs/modernizr-2.5.3.min.js")

%body
  %a.visuallyhidden.focusable(href="#main") Skip to main content link

  #container
    %header
      = partial :'partials/_header'

    #main.container(role="main")
      = yield

    %footer
      = partial :'partials/_footer'

  -# JavaScript at the bottom for fast page loading
  = partial :'partials/_javascripts'

  -# Google analytics snippet
  = partial :'partials/_analytics'
